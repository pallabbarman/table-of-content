{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "app/*": ["app/*"],
            "components/*": ["components/*"],
            "icons/*": ["icons/*"],
            "test_utils/*": ["test_utils/*"],
            "utils/*": ["utils/*"]
        },
        "types": ["vitest/globals"]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "vitest.config.mts"
    ],
    "exclude": ["node_modules"]
}
